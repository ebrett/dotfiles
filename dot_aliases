# Dotfile management helpers
dotfile_check() {
    if [[ $(chezmoi status | wc -l) -gt 0 ]]; then
        echo "‚ö†Ô∏è  You have unsynced dotfile changes. Run 'cms' (chezmoi status) to review."
        echo "   Use 'cmd' (chezmoi diff) to see details, 'cmra <file>' to sync changes."
    else
        echo "‚úÖ All dotfiles are in sync with chezmoi."
    fi
}

# Quick dotfile sync helper
dotfile_sync() {
    echo "üìã Checking dotfile status..."
    chezmoi status
    echo ""
    read -q "REPLY?Sync all changes to chezmoi? (y/n): "
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        for file in $(chezmoi status | awk '{print $2}'); do
            echo "üîÑ Syncing $file..."
            chezmoi re-add "$HOME/$file"
        done
        echo "‚úÖ All changes synced to chezmoi."
    else
        echo "‚ùå Sync cancelled."
    fi
}
